{
  "manifest_version": 3,
  "name": "YouTube Chatbot",
  "version": "1.0",
  "description": "Chat with YouTube video transcripts using ChatGPT.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}